<?xml version="1.0" encoding="utf-8"?>
<openerp>
  <data>
    <!--重写payslip界面-->
    <record id="view_hr_payslip_tree_new" model="ir.ui.view">
      <field name="name">hr.payslip.tree.new</field>
      <field name="model">hr.payslip</field>
      <field name='inherit_id' ref='hr_payroll.view_hr_payslip_tree'/>
      <field name="arch" type="xml">
        <tree position='replace'>
          <tree colors="blue:state in ('confirm','hr_check','accont_check');black:state == 'new';gray:state == 'cancel'" string="Payslips">
            <field name="employee_id"/>
            <field name="basic" sum='Total Basic'/>
            <field name="year_salary"/>
            <field name="trail_days"/>
            <field name="worked_days"/>
            <field name="prp"/>
            <field name="alw" sum='alw'/>
            <field name="gross" sum="gross"/>
            <field name="late"/>
            <field name="no_sign"/>
            <field name="absent_days"/>
            <field name="leave_days"/>
            <field name="ded" sum='ded'/>
            <field name="net" sum='net'/>
            <field name="state" invisible="1"/>
            <field name="company_id" groups="base.group_multi_company" widget="selection"/>
            <field name="payslip_run_id" invisible="1"/>
          </tree>
        </tree>
      </field>
    </record>

  </data>
</openerp>

